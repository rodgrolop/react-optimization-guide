{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "plugins": ["react-hooks"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "parser": "flow"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
